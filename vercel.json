{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/recipe/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/invite/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/cookbook/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}