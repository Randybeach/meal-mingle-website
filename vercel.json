{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@1.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/recipe/([^/]+)",
      "destination": "/api/recipe.php?id=$1"
    },
    {
      "source": "/invite/([^/]+)",
      "destination": "/invite.html"
    },
    {
      "source": "/cookbook/([^/]+)",
      "destination": "/cookbook-invite.html"
    }
  ]
}