{
  "functions": {
    "api/*.php": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/recipe/([^/]+)",
      "destination": "/api/recipe?id=$1"
    },
    {
      "source": "/invite/([^/]+)",
      "destination": "/invite.html"
    },
    {
      "source": "/cookbook/([^/]+)",
      "destination": "/cookbook-invite.html"
    }
  ]
}