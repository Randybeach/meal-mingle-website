{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/recipe/**",
        "destination": "/recipe.html"
      },
      {
        "source": "/cookbook/**",
        "destination": "/cookbook-invite.html"
      },
      {
        "source": "/invite/**",
        "destination": "/invite.html"
      }
    ],
    "headers": [
      {
        "source": "/.well-known/apple-app-site-association",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      }
    ]
  }
}